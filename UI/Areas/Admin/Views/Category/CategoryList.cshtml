﻿
@{
  ViewBag.Title = "CategoryList";
  Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}




@model List<DTO.CategoryDTO>
<section class="content-header">
  <h1>Category List</h1>
  <ol class="breadcrumb float-sm-left">
    <li class="breadcrumb-item"><a>Admin</a></li>
    <li class="breadcrumb-item"><a>Category</a></li>
    <li class="breadcrumb-item active"><a>Category List</a></li>
  </ol>
</section>
<br />
<div class="card-footer">
  <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/Category/AddCategory'">Add Category</button>
</div>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">DataTable with default features</h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Category</th>
          <th>Update</th>
          <th>Delete</th>

        </tr>
      </thead>
      <tbody>

        @foreach (var item in Model)
        {
          <tr id="a_@item.ID">
            <td>@item.Category</td>

            @* UPDATE *@
            <td align="center" valign="middle">
              <a href="/Admin/Category/UpdateCategory/@item.ID">
                <br />
                <img src="~/Areas/Admin/Content/icons/loading-arrow.png" style="height:40px;" />
              </a>
            </td>


            <td align="center" valign="middle">
              <a href="#">
                <br />
                <img src="~/Areas/Admin/Content/icons/delete.png" style="height:40px;" onclick="AskQuestion('/Admin/Category/DeleteCategory/', @item.ID)"/>
              </a>
            </td>
          </tr>
        }
      </tbody>

    </table>
  </div>
  @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
</div>
<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>