﻿

@model DTO.CategoryDTO
<div class="box-body">

  <input hidden type="number" value="@Model.ID" name="ID" />

  <div class="form-group">
    <label>Category</label>
    @Html.TextBoxFor(x => x.Category, new { @class = "form-control", placeholder = "Enter Category" })
    @Html.ValidationMessageFor(x => x.Category, "", new { @class = "text-danger" })
  </div>

  <div class="card-footer">
    <button class="btn btn-primary">Save</button>
  </div>


</div>