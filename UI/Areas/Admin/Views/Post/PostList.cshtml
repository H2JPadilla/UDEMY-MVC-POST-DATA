@{
    ViewBag.Title = "PostList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.PostDTO>

<!-- Page Header -->
<section class="content-header mb-3">
    <h2 class="fw-bold text-dark">Post List</h2>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a href="#">Admin</a></li>
        <li class="breadcrumb-item"><a href="#">Post</a></li>
        <li class="breadcrumb-item active">Post List</li>
    </ol>
</section>

<!-- Add Post Button -->
<div class="card-footer border-0 bg-transparent mb-3">
    <button type="button" class="btn btn-dark px-4" onclick="window.location.href='/Admin/Post/AddPost'">
        <i class="ion-compose me-2"></i> Add Post
    </button>
</div>

<!-- Post Table -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-white">
        <h5 class="card-title mb-0 text-dark">
            <i class="ion-document-text me-2 mr-2""></i>Post Management
        </h5>
    </div>

    <div class="card-body">
        <table id="example1" class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Date Added</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="a_@item.ID">
                        <td class="fw-semibold">@item.Title</td>
                        <td>@item.CategoryName</td>
                        <td>@item.AddDate.ToString("dd.MM.yyyy, dddd")</td>

                        <!-- UPDATE -->
                        <td class="text-center">
                            <a href="/Admin/Post/UpdatePost/@item.ID"
                               class="text-decoration-none text-primary d-inline-flex align-items-center justify-content-center gap-2">
                                <i class="ion-edit"></i>
                                <span class="ml-2">Edit</span>
                            </a>
                        </td>

                        <!-- DELETE -->
                        <td class="text-center">
                            <a href="#"
                               class="text-decoration-none text-danger d-inline-flex align-items-center justify-content-center gap-2"
                               onclick="AskQuestion('/Admin/Post/DeletePost/', @item.ID)">
                                <i class="ion-trash-b"></i>
                                <span class="ml-2">Delete</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
</div>

<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>
