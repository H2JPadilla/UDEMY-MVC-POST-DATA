@{
    ViewBag.Title = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.UserDTO>

<!-- Page Header -->
<section class="content-header mb-3">
    <h2 class="fw-bold" style="color:#2c3e50;">User List</h2>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a href="#">Admin</a></li>
        <li class="breadcrumb-item"><a href="#">User</a></li>
        <li class="breadcrumb-item active">User List</li>
    </ol>
</section>

<!-- Add User Button -->
<div class="card-footer border-0 bg-transparent mb-3">
    <button type="button" class="btn btn-dark px-4" onclick="window.location.href='/Admin/User/AddUser'">
        <i class="ion-person-add me-2 mr-2"></i> Add User
    </button>
</div>

<!-- User List Card -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-white">
        <h5 class="card-title mb-0" style="color:#2c3e50;">
            <i class="ion-person-stalker me-2 mr-2"></i>User Management
        </h5>
    </div>

    <div class="card-body">
        <table id="example1" class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:25%;">Name</th>
                    <th style="width:25%;">Username</th>
                    <th style="width:25%;">Image</th>
                    <th style="width:12%;">Update</th>
                    <th style="width:12%;">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="a_@item.ID">
                        <td class="fw-semibold">@item.Name</td>
                        <td>@item.Username</td>
                        <td>
                            <img src="~/Areas/Admin/Content/UserImages/@item.ImagePath"
                                 class="rounded shadow-sm"
                                 style="width:60px; height:40px; object-fit:cover;" />
                        </td>

                        <!-- UPDATE -->
                        <td class="text-center">
                            <a href="/Admin/User/UpdateUser/@item.ID"
                               class="text-decoration-none text-primary d-inline-flex align-items-center justify-content-center gap-2">
                                <i class="ion-edit" style="font-size:1.2rem;"></i>
                                <span class="ml-2">Edit</span>
                            </a>
                        </td>

                        <!-- DELETE -->
                        <td class="text-center">
                            <a href="#"
                               class="text-decoration-none text-danger d-inline-flex align-items-center justify-content-center gap-2"
                               onclick="AskQuestion('/Admin/User/DeleteUser/', @item.ID)">
                                <i class="ion-trash-b" style="font-size:1.2rem;"></i>
                                <span class="ml-2">Delete</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
</div>

<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>
