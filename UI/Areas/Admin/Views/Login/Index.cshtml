@{
  ViewBag.Title = "Index";
  Layout = null;
}
@model DTO.UserDTO


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>H2SCS | Log in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Areas/Admin/Content/CSS/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/Areas/Admin/Content/CSS/mdb.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/CSS/icheck-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/CSS/adminlte.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo mb-4">
            <h2 class="fw-bold"><span class="text-primary">OAK</span> COURSES</h2>
        </div>

        <div class="card shadow-4-strong rounded-4">
            <div class="card-body px-4 py-5">
                <p class="text-center text-uppercase fs-2 fw-bold mb-4">Sign in</p>

                <form method="POST">
                    @Html.ValidationMessageFor(u => u.Username, "", new { @class = "text-danger" })
                    <div class="form-outline mt-1 mb-4" data-mdb-input-init>
                        <input type="text" id="username" class="form-control" name="Username" />
                        <label class="form-label" for="username">
                            <i class="fas fa-user me-2"></i> Username
                        </label>
                    </div>

                    @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
                    <div class="form-outline mt-1 mb-4 position-relative" data-mdb-input-init>
                        <input type="password" id="password" class="form-control" name="Password" />
                        <label class="form-label" for="password">
                            <i class="fas fa-lock me-2"></i> Password
                        </label>
                        <span class="position-absolute top-50 end-0 translate-middle-y pe-3" style="cursor:pointer;">
                            <i id="togglePassword" class="far fa-eye"></i>
                        </span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" checked />
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                        <a href="#!" class="text-primary">Forgot password?</a>
                    </div>

                    <button data-mdb-ripple-init type="submit" class="btn btn-outline-dark btn-block shadow-2">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/Areas/Admin/Content/JS/jquery.min.js"></script>
    <script src="~/Areas/Admin/Content/JS/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/Admin/Content/JS/adminlte.min.js"></script>
    <script src="~/Areas/Admin/Content/JS/mdb.umd.min.js"></script>
    <script>
        const togglePassword = document.getElementById("togglePassword");
        const passwordInput = document.getElementById("password");

        togglePassword.addEventListener("click", function () {
            const type = passwordInput.type === "password" ? "text" : "password";
            passwordInput.type = type;

            this.classList.toggle("fa-eye");
            this.classList.toggle("fa-eye-slash");
        });
    </script>

</body>
</html>