
@model DTO.AdsDTO
<div class="box-body">

  <div class="form-group">
    <label>Name</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter Ads Name" })
    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
  </div>

  <div class="form-group">
    <label>Link</label>
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control", placeholder = "Enter Link" })
    @Html.ValidationMessageFor(x => x.Link, "", new { @class = "text-danger" })
  </div>

  <input hidden type="number" value="@Model.ID" name="ID" />
  <div class="form-group">
    @Html.LabelFor(x => x.AdsImage)
    <input type="file" name="AdsImage" accept="image/gif, image/jpeg,image/png, image/jpg"
           onchange="$('#AdsImage')[0].src = window.URL.createObjectURL(this.files[0])" />
    <br />
    @if (Model != null && Model.ImagePath != null)
    {
      <br />
      <img src="~/Areas/Admin/Content/AdsImages/@Model.ImagePath" width="300" height="200" id="AdsImage" />
    }
    else
    {
      <img src="" width="300" height="200" id="AdsImage" />
    }
  </div>

  <div class="form-group">
    <label>Image Size</label>
    @Html.TextBoxFor(x => x.ImageSize, new { @class = "form-control", placeholder = "Enter image size" })
    @Html.ValidationMessageFor(x => x.ImageSize, "", new { @class = "text-danger" })
  </div>

  <div class="card-footer"></div>
  <button class="btn btn-primary">Save</button>


</div>