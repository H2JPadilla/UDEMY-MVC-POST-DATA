﻿@model DTO.VideoDTO
<div class="box-body">

  <input hidden type="number" value="@Model.ID" name="ID" />

  <div class="form-group">
    <label>Title</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Enter Title" })
    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
  </div>

  <div class="form-group">
    <label>Video Path</label>
    @Html.TextBoxFor(x => x.OriginalVideoPath, new { @class = "form-control", placeholder = "Enter VideoPath" })
    @Html.ValidationMessageFor(x => x.OriginalVideoPath, "", new { @class = "text-danger" })
  </div>



  <div class="card-footer"></div>
  <button class="btn btn-primary">Save</button>


</div>